  /* Estilo para el subtítulo */
  .subtitle-section2 {
    max-width: 1000px;
    width: 100%;
    text-align: center;
    font-weight: 600;
    font-size: 24px;
    color: rgb(74, 74, 74);;
    margin: 89px auto 32px auto;
    text-transform: uppercase;
    letter-spacing: 1px;
    -webkit-text-stroke-width: 0.55px;
    -webkit-text-stroke-color: var(--blue);
    
  }
  
  /* Carousel de Proyectos */
  .projects-carousel {
    display: flex;
    gap: 30px;
    padding: 40px 50px;
    margin: 0 auto 10px auto;
    max-width: 1400px;
    
    scrollbar-width: thin;
    scrollbar-color: #08cbd500 transparent;
    display: flex;
    overflow-y: scroll;
    
    width: 90vw;
    scroll-snap-type: x mandatory;
  }
  
  .projects-carousel::-webkit-scrollbar {
    height: 8px;
  }
  
  .projects-carousel::-webkit-scrollbar-track {
    background: transparent;
  }
  
  .projects-carousel::-webkit-scrollbar-thumb {
    background: var(--blue);
    border-radius: 4px;
  }
  
  .project-card {
    position: relative;
    min-width: 293px;
    height: 226px;
    border-radius: 16px;
    overflow: hidden; 
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    text-decoration: none;
    /* display: block; */
    color: inherit;
    scroll-snap-align: center;
  }
  
  a.project-card:hover {
    text-decoration: none;
    color: inherit;
  }
  
  .project-card:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
  }
  
  .project-image {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
  }
  
  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }
  
  .project-card:hover .project-image img {
    transform: scale(1.1);
  }
  
  .project-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.1) 0%,
      rgba(0, 0, 0, 0.7) 70%,
      rgba(0, 0, 0, 0.9) 100%
    );
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 25px;
    opacity: 0;
    transition: opacity 0.4s ease;
  }
  
  .project-card:hover .project-overlay {
    opacity: 1;
  }
  
  .project-overlay h3 {
    color: white;
    font-size: 22px;
    font-weight: 700;
    margin: 0 0 8px 0;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }
  
  .project-overlay p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 14px;
    line-height: 1.4;
    margin: 0 0 12px 0;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
  }
  
  .project-tag {
    display: inline-block;
    background: var(--blue);
    color: white;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    align-self: flex-start;
  }
  
  /* Estilos específicos por proyecto */
  .project-card[data-project="winto"] .project-tag {
    background: linear-gradient(135deg, #ff6b6b, #ff8e53);
  }
  
  .project-card[data-project="serene"] .project-tag {
    background: linear-gradient(135deg, #8b5a3c, #a67c5a);
  }
  
  .project-card[data-project="tarifa"] .project-tag {
    background: linear-gradient(135deg, #4a90e2, #357abd);
  }
  
  .project-card[data-project="nadales"] .project-tag {
    background: linear-gradient(135deg, #7cb342, #8bc34a);
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .projects-carousel {
      padding: 0 20px;
      gap: 20px;
    }
    
    .project-card {
      min-width: 280px;
      height: 200px;
    }
    
    .project-overlay {
      padding: 20px;
    }
    
    .project-overlay h3 {
      font-size: 18px;
    }
    
    .project-overlay p {
      font-size: 13px;
    }
    
    .subtitle-section2 {
      font-size: 20px;
      margin: 89px auto 32px auto;
    }
  }
  
  @media (max-width: 480px) {
    .project-card {
      min-width: 250px;
      height: 180px;
    }
    
    .project-overlay {
      padding: 15px;
    }
    
    .subtitle-section2 {
      font-size: 18px;
      padding: 0 20px;
    }
  }
