---
import { translations, type Lang } from '../i18n/translations';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = translations[lang].section2;
const projects = t.projects;
const timeline = t.timeline;
const formatDateHTML = (value: string) => value.replace(/\n/g, '<br />');
---

<section id="section2" class="section2" aria-labelledby="work-experience-title">
