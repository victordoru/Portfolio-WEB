<script>
  // Este script será procesado por el navegador
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contactForm') as HTMLFormElement;
    const formMessage = document.getElementById('form-message');
    
    if (form && formMessage) {
      form.addEventListener('submit', async (event) => {
        event.preventDefault();
        
        try {
          const formData = new FormData(form);
          
          // Mostrar estado de carga
          formMessage.textContent = 'Sending message...';
          formMessage.className = 'form-message info';
          
          const response = await fetch('/api/contact', {
            method: 'POST',
            body: formData
          });
          
          const result = await response.json();
          
          if (response.ok) {
            // Éxito
            formMessage.textContent = 'Message sent successfully!';
            formMessage.className = 'form-message success';
            form.reset();
          } else {
            // Error del servidor
            formMessage.textContent = result.message || 'Error sending message. Please try again.';
            formMessage.className = 'form-message error';
          }
        } catch (error) {
          // Error de red o JavaScript
          formMessage.textContent = 'Connection error. Please try again later.';
          formMessage.className = 'form-message error';
          console.error('Form submission error:', error);
        }
      });
    }
  });
</script>

